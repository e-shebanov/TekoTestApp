@model List<TekoTestApp.Models.Employee>

<h2>Список сотрудников</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Должность</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Employee", new { id = employee.Id })">@employee.FullName</a></td>
                <td>@employee.Position</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
</table>




